<?xml version="1.0" encoding="UTF-8"?>

<!-- Step 1: Root tag for Spring configuration -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Step 2: Define your beans here -->

<!--    For result class -->
    <bean id="res" class="org.example.CheckResult"/>

<!--    For student class -->
    <bean id="student" class="org.example.CheckStudent"/>

    <!-- Step 3: Inject dependency -->
<!--    Constructor injection for ViewStudent-->
    <bean id="viewstudent" class="org.example.ViewStudent">
        <constructor-arg ref="student"/>
    </bean>


    <bean id="viewresult" class="org.example.ViewResult">
        <property name="result" ref="res"/>
    </bean>

</beans>
